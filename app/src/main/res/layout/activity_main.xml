<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- CONTENIDO PRINCIPAL -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fondocelujpg">

        <!-- Ícono menú -->
        <ImageView
            android:id="@+id/icon_menu"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icono_menu"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Ícono compartir -->
        <ImageView
            android:id="@+id/share_c"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/share"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Texto "En Vivo" -->
        <TextView
            android:id="@+id/text_en_vivo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Musica - Noticias"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/icon_menu"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Logo -->
        <ImageView
            android:id="@+id/logo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/logo"
            android:scaleType="fitCenter"
            app:layout_constraintWidth_percent="0.9"
            app:layout_constraintHeight_percent="0.35"
            app:layout_constraintTop_toBottomOf="@id/text_en_vivo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Nombre de la radio -->
        <TextView
            android:id="@+id/text_radio_nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RADIO CLARIN de Colombia"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Botón Play -->
        <ImageView
            android:id="@+id/play_btn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/play_ico"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/text_radio_nombre"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Ecualizador -->
        <LinearLayout
            android:id="@+id/equalizer_container"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/play_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <View android:id="@+id/bar1" android:layout_width="8dp" android:layout_height="20dp" android:layout_margin="4dp" android:background="@drawable/bar_shape"/>
            <View android:id="@+id/bar2" android:layout_width="8dp" android:layout_height="30dp" android:layout_margin="4dp" android:background="@drawable/bar_shapered"/>
            <View android:id="@+id/bar3" android:layout_width="8dp" android:layout_height="15dp" android:layout_margin="4dp" android:background="@drawable/bar_shape_yellw"/>
            <View android:id="@+id/bar4" android:layout_width="8dp" android:layout_height="25dp" android:layout_margin="4dp" android:background="@drawable/bar_shapeorange"/>
            <View android:id="@+id/bar5" android:layout_width="8dp" android:layout_height="18dp" android:layout_margin="4dp" android:background="@drawable/bar_shape_green"/>
            <View android:id="@+id/bar6" android:layout_width="8dp" android:layout_height="18dp" android:layout_margin="4dp" android:background="@drawable/bar_shapeblue"/>
            <View android:id="@+id/bar7" android:layout_width="8dp" android:layout_height="18dp" android:layout_margin="4dp" android:background="@drawable/bar_shape_violet"/>
            <View android:id="@+id/bar8" android:layout_width="8dp" android:layout_height="18dp" android:layout_margin="4dp" android:background="@drawable/bar_shape_black"/>
        </LinearLayout>

        <!-- Redes sociales -->
        <LinearLayout
            android:id="@+id/social_icons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/equalizer_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/facebook_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="8dp"
                android:src="@drawable/facebook_icon" />

            <ImageView
                android:id="@+id/telegram_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="8dp"
                android:src="@drawable/telegram_icon"/>

            <ImageView
                android:id="@+id/twitter_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="8dp"
                android:src="@drawable/xlogo_twitter"/>

            <ImageView
                android:id="@+id/youtube_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="8dp"
                android:src="@drawable/youtube"/>

            <ImageView
                android:id="@+id/vk_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="8dp"
                android:src="@drawable/vk_icon"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- MENU LATERAL -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:menu="@menu/drawer_menu"
        app:headerLayout="@layout/header_drawer"/>
</androidx.drawerlayout.widget.DrawerLayout>
